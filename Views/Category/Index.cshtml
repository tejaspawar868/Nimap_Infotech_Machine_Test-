@model IEnumerable<NimapInfoMachineTest.Models.Category>

@{
    ViewBag.Title = "Category List";
}
@if (TempData["Message"] != null)
{
    <script>
        alert("@TempData["Message"]");
    </script>
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Category List</h2>

    <div class="mb-3 text-right">
        <a href="@Url.Action("Create", "Category")" class="btn btn-success">Add New Category</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Category ID</th>
                    <th>Category Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.CategoryId</td>
                        <td>@category.CategoryName</td>
                        <td>
                            <a href="@Url.Action("Edit", "Category", new { id = category.CategoryId })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("Delete", "Category", new { id = category.CategoryId })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
