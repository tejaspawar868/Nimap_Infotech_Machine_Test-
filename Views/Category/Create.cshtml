@model NimapInfoMachineTest.Models.Category

@{
    ViewBag.Title = "Create Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Create New Category</h2>

            @using (Html.BeginForm("Create", "Category", FormMethod.Post, new { @class = "card p-4 shadow-sm" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.CategoryName, "Category Name", new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control", @placeholder = "Enter category name" })
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger mt-1" })
                </div>

                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            }

        </div>
    </div>
</div>
