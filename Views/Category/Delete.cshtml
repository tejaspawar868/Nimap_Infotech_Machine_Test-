@model NimapInfoMachineTest.Models.Category

@{
    ViewBag.Title = "Delete Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h2 class="text-center text-danger mb-4">Delete Category</h2>
                <p class="text-center fw-bold">Are you sure you want to delete this category?</p>

                <div class="mb-3">
                    <strong>Category Name: </strong>
                    <span class="text-primary">@Model.CategoryName</span>
                </div>

                @using (Html.BeginForm("Delete", "Category", FormMethod.Post, new { @class = "mt-4" }))
                {
                    @Html.AntiForgeryToken()
                   
                    @Html.HiddenFor(model => model.CategoryId)

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
