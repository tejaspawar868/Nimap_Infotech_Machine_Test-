@model NimapInfoMachineTest.Models.Category

@{
    ViewBag.Title = "Edit Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h2 class="text-center text-primary mb-4">Edit Category</h2>

                @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { @class = "mt-3" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.HiddenFor(model => model.CategoryId)

                    <div class="form-group mb-3">
                        @Html.LabelFor(model => model.CategoryName, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control", @placeholder = "Enter category name" })
                        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                }


            </div>
        </div>
    </div>
</div>
