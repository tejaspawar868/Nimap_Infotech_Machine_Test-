@model NimapInfoMachineTest.Models.Product

@{
    ViewBag.Title = "Delete Product";
}

<div class="container mt-5">
    <h2 class="text-center text-danger mb-4">Delete Product</h2>

    <p>Are you sure you want to delete this product?</p>

    <div>
        <strong>Product Name: </strong>@Model.ProductName<br />
        <strong>Category Name: </strong>@Model.Category.CategoryName
    </div>

    @using (Html.BeginForm("Delete", "Product", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ProductId)

        <div class="mt-3">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Cancel</a>
        </div>
    }

</div>
